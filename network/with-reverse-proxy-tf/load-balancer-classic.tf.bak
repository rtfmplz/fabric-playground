# 이 모듈을 사용하는 경우 ecs-service.tf의 load_balancer 블럭의 taget_group_arn을 제거하고 아래 구문을 추가해야 함
# elb_name = "${aws_elb.public-elb-classic.name}"

resource "aws_elb" "public-elb-classic" {
	name = "public-elb-classic"
	subnet = [
		"${aws_subnet.public-subnet.0.id}",
		"${aws_subnet.public-subnet.1.id}",
	]
	security_groups = ["${aws_security_group.public-lb-sg.id}"]

	listner {
		instance_port = 80
		instance_protocol = "tcp"
		lb_port = 80
		lb_protocol = "tcp"
	}

	tags = {
		Name = "public-elb-classic"
	}
}
